{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-5 pb-5" align="center">
        <div class="card">
            <h1 class="card-header bg-green">{{ folder.name }}</h1>
            <div class="card-body pt-5 pb-5">
                <div class="row">
                    {% for image in images %}
                        <div class="col-md-3 mb-4 text-center">
                            <img class="img-thumbnail myImg" id="{{ image }}" src="/{{ folder.path }}{{ image }}" style="height: 300px; width: 300px">
                        </div>

                        <!-- Modal zoom de des images miniature -->
                        <div id="myModal" class="modal">
                            <span class="close">&times;</span>
                            <img class="modal-content" id="img01">
                            <div id="caption"></div>

                            <script>
                                // Get the modal
                                var modal = document.getElementById('myModal');

                                // Get the image and insert it inside the modal - use its "alt" text as a caption
                                var img = document.getElementById('{{ image }}');
                                var modalImg = document.getElementById("img01");
                                var captionText = document.getElementById("caption");
                                img.onclick = function(){
                                    modal.style.display = "block";
                                    modalImg.src = this.src;
                                    captionText.innerHTML = this.alt;
                                }

                                // Get the <span> element that closes the modal
                                var span = document.getElementsByClassName("close")[0];

                                // When the user clicks on <span> (x), close the modal
                                span.onclick = function() {
                                    modal.style.display = "none";
                                }
                            </script>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div align="center">
                <a class="btn btn-primary bg-green mb-5" href="{{ path('gallery') }}">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
