{% extends 'base.html.twig' %}

{% block body %}
    <div id="carouselExampleControls" class="carousel slide pt-5 pb-5" data-ride="carousel"
         style="background-color:
    #fcebc2">
        <div class="carousel-inner">
            {% for i in 2..images|length +1 %}
                <div class="carousel-item  {{ (i == 2) ? 'active' : '' }}" align="center">
                    <img src=" /{{ folder.path }}{{ images[i] }}" alt="slide" style="height: 650px">
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}
