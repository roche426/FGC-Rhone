{% extends 'base.html.twig' %}

{% block body %}
{% include 'front/article.html.twig' %}

            {% if comments %}
                {% for comment in comments %}
                    <div class="card col-md-8">
                        <ul class="list-group list-group-flush">
                            <div class="row mt-3">
                                <div class="col-md-5">
                                    {% if comment.user %}
                                    <p> {{ comment.user.firstName }} {{ comment.user.lastName }}
                                        {% else %}
                                    <p> Utilisateur supprim√©
                                        {% endif %}
                                        <i>le {{ comment.publicationDate | date('d-m-Y') }}</i>
                                    </p>
                                </div>
                                <div class="col-md-7">
                                    <h5>{{ comment.comment }}</h5>
                                </div>
                            </div>
                        </ul>
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucun commentaire</p>
            {% endif %}
            {% if app.user %}
                <div class="row">
                    <div class="col-md-8 offset-md-2 text-center">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <input type="submit" value="Enregistrer"/>
                        {{ form_end(form) }}
                    </div>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}



