{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid pt-5 pb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center mb-3">
            <h1>Nos actualités</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center ">
            {% if articles %}
                {% for article in articles %}
                    <h5 class="mb-3"><img src="/assets/images/article.png">
                        <a href="{{ path('actuality', {id:article.id}) }}"> {{ article.title }}</a>
                    </h5>
                {% endfor %}
            {% else %}
                <p>Pas d'articles publiés</p>
            {% endif %}
        </div>
    </div>
</div>


{% endblock %}


