{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-5 pb-5" align="center">
        <div class="card">
            <h1 class="card-header bg-green">Galerie d'images</h1>
            <div class="row card-body pt-5 pb-5">
                {% if folders %}
                    {% for folder in folders %}
                        <div class="col-md-4 mt-3 mb-3">
                            <div class="card bg-green">
                                <img class="card-img-top" src="/uploaded_files/thematics_image_gallery/{{ folder.image }}"
                                     alt="Card image cap">
                                <div class="card-body text-center">
                                    <h4 class="card-title gold">{{ folder.name }}</h4>
                                    <p class="card-text gold">{{ folder.description }}</p>
                                    <a href="{{ path('show_images', {id:folder.id}) }}" class="btn btn-light">Voir
                                        l'album</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
