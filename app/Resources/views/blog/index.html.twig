{% extends 'base.html.twig' %}

{% block body %}

<div class="container contain-home p-3">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Vos article</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center mb-5">
            <a href="{{ path('blog_new') }}">Créer un nouvel article</a>
        </div>
    </div>

    {% if blogs %}
        {% for blogs in blogs %}
        <div class="row">
            <div class="col-md-8 mb-3">
                <h3 class="mb-4"><img src="/assets/images/article.png"> {{ blogs.title }}</h3>
            </div>
            <div class="col-md-2 text-center">
                <a class="alert-delete" href="{{ path('blog_delete', {id:blogs.id}) }}"
                   data-confirm-message="Confirmer la supression de l'article?">Supprimer</a>
            </div>
            <div class="col-md-2 text-center">
                <a href="{{ path('blog_edit', {id:blogs.id}) }}">Modifier</a>
            </div>
        </div>
        {% endfor %}
    {% else %}
        <div class="col-md-6 offset-md-3 text-center">
            <h3 >Pas encore d'articles publiés</h3>
        </div>
    {% endif %}
{% endblock %}

