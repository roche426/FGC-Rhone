{% extends 'base.html.twig' %}

{% block body %}

<div class="container contain-home p-3">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Vos article</h1>
        </div>
    </div>
    {% if blogs %}
        {% for blogs in blogs %}
        <div class="row">
            <div class="col-md-12 text-center mb-3">
                <h3 class="mb-4"><img src="/assets/images/article.png"> {{ blogs.title }}</h3>
            </div>
            <a href="{{ path('blog_edit', {id:blogs.id}) }}">click</a>
        </div>
        {% endfor %}
    {% else %}
        <div class="col-md-6 offset-md-3 text-center">
            <h3 >Pas encore d'articles publi√©s</h3>
        </div>
    {% endif %}
</div>

{% endblock %}

