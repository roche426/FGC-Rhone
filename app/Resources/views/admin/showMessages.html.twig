{% extends 'baseAdmin.html.twig' %}

{% block titleDashboard %}
    <h2>Liste des messages reçus</h2>
{% endblock %}

{% block body %}
        <table class="table">
            <thead class="thead-dark ">
            <tr>
                <th scope="col" class="col-md-1 text-center">Date</th>
                <th scope="col" class="col-md-1 text-center">Autheur</th>
                <th scope="col" class="col-md-1 text-center">Email</th>
                <th scope="col" class="col-md-1 text-center">Matricule</th>
                <th scope="col" class="col-md-2 text-center">Sujet</th>
                <th scope="col" class="col-md-4 text-center">Message</th>
                <th scope="col" class="col-md-1 text-center">Action</th>
            </tr>
            </thead>
            <tbody >
            {% for messageContactUs in messagesContactUs %}
                <tr {% if messageContactUs.isTreated %} style="background-color: lightgrey" {% endif %}>
                    <td class="text-center">{{ messageContactUs.date |date('d/m/Y')}} </td>
                    <td class="text-center">{{ messageContactUs.firstName }} {{ messageContactUs.lastName }}</td>
                    <td class="text-center">{{ messageContactUs.email }}</td>
                    <td class="text-center">{{ messageContactUs.register }}</td>
                    <td class="text-center">
                        {% if messageContactUs.subject == constant('CONTACT_VISITORS', messageContactUs) %}
                            Demande d'informations
                        {% elseif messageContactUs.subject == constant('CONTACT_MEMBERS_ACCES', messageContactUs) %}
                            Demande d'accès d'un membre
                        {% endif %}
                    </td>
                    <td class="text-center">{{ messageContactUs.message }}</td>
                    <td class="text-center">
                        <a class="btn btn-light" href="{{ path('show_one_message', {id:messageContactUs.id}) }}">Accèder au message</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
