{% extends 'baseAdmin.html.twig' %}

{% block titleDashboard %}
    <h2>Visualisation de l'article</h2>
{% endblock %}
{% block body %}
    <div class="container-fluid pt-5 pb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <h1>{{ article.title }}</h1>
            </div>
        </div>
        <div class="container">
            <div class="row mt-3">
                {% if article %}
                <div class="col-md-6">
                    <img class="img-article" src="/{{ article.imageArticle }}">
                </div>
                <div class="col-md-6">
                    <p>{{ froala_display(article.article) }}"</p>
                </div>
            </div>
            <div class="row mt-3 ml-5">
                <h5>Auteur : {{ article.author }}</h5>
            </div>
            {% else %}
                <div class="row">
                    <div class="col-md-2 offset-md-8">
                        <h5>Pas d'article disponible</h5>
                    </div>
                </div>
            {% endif %}
            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <h3>Commentaires</h3>
                </div>
            </div>
            {% if comments %}
                {% for comment in comments %}
                    <div class="row">
                        <div class="col-md-2 offset-md-2 text-center">
                            <h5> {{ comment.user.firstName }} {{ comment.user.lastName }} </h5>
                        </div>
                        <div class="col-md-6">
                            <p>{{ comment.comment }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucun commentaire</p>
            {% endif %}
        </div>
    </div>
{% endblock %}


