{% extends 'baseAdmin.html.twig' %}

{% block titleDashboard %}
    <h2>Visualisation de l'article</h2>
{% endblock %}

{% block body %}

            {% include 'front/article.html.twig' %}
            {% if comments %}
                {% for comment in comments %}
                    <div class="row">
                        <div class="card col-md-8 offset-md-1">
                            <ul class="list-group list-group-flush">
                                <div class="row mt-3">
                                    <div class="col-md-5">
                                        {% if comment.user %}
                                        <p> {{ comment.user.firstName }} {{ comment.user.lastName }}
                                            {% else %}
                                        <p> Utilisateur supprim√©
                                            {% endif %}
                                            <i>le {{ comment.publicationDate | date('d-m-Y') }}</i>
                                        </p>
                                    </div>
                                    <div class="col-md-7">
                                        <h5>{{ comment.comment }}</h5>
                                    </div>
                                </div>
                            </ul>
                        </div>
                        <div class="col-md-2 mt-2">
                            <a class="btn btn-danger alert-delete" href="{{ path('delete_comment', {id:comment.id}) }}"
                               data-confirm-message="Confirmer la suppression de l'article?">Supprimer</a>
                        </div>
                    </div>


                {% endfor %}
            {% else %}
                <p>Aucun commentaire</p>
            {% endif %}
            </div>
        </div>
    </div>
    <a class="btn btn-primary bg-green mt-5" href="{{ path('admin_articles') }}">Retour</a>

{% endblock %}


