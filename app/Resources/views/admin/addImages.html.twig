{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-5">
                <h1>Mes images</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    {{ form_start(form) }}
                    <div class="card-body">
                        <h5 class="card-title">Télécharger vos images</h5>
                        <p class="card-text">{{ form_widget(form.name) }}</p>
                        <input class="btn btn-dark" type="submit" value="Valider">
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}



