{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-5 pb-5" align="center">
        <div class="card">
            <h1 class="card-header bg-green">Information du profil</h1>
            <div class="row card-body pt-5 pb-5">
                <div class="col-sm-10 offset-sm-1">
                    <div class="card">
                        {{ form_start(form) }}
                        <div class="card-body ">
                            <div class="row mt-4">
                                <div class="col-sm-4">
                                    {{ form_label(form.firstName) }}
                                    {{ form_widget(form.firstName) }}
                                </div>
                                <div class="col-sm-4">
                                    {{ form_label(form.lastName) }}
                                    {{ form_widget(form.lastName) }}
                                </div>
                                <div class="col-sm-4">
                                    {{ form_label(form.birthDate) }}
                                    {{ form_widget(form.birthDate) }}
                                </div>
                            </div>
                            <div class="mt-4">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                            </div>
                            <div class="mt-4">
                                {{ form_label(form.additionalAddress) }}
                                {{ form_widget(form.additionalAddress) }}
                            </div>
                            <div class="row mt-4">
                                <div class="col-sm-4">
                                    {{ form_label(form.postalCode) }}
                                    {{ form_widget(form.postalCode) }}
                                </div>
                                <div class="col-sm-8">
                                    {{ form_label(form.city) }}
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-sm-4">
                                    {{ form_label(form.phoneNumber) }}
                                    {{ form_widget(form.phoneNumber) }}
                                </div>
                                <div class="col-sm-8">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="row mt-5">
                                <div class="col-sm-3 offset-sm-2">
                                    <p>{{ form_label(form.pictureProfil) }}</p>
                                </div>
                                <div class="col-sm-5">
                                    {{ form_widget(form.pictureProfil) }}
                                </div>
                            </div>
                        </div>
                        <div class="mt-2 mb-2">
                            <input class="btn btn-primary bg-green" type="submit" value="Valider">
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


