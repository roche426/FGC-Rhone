{% extends 'base.html.twig' %}

{% block body %}

    <div class="container pt-5 pb-5">
        <div class="row mb-5">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <h1>Connexion</h1>
            </div>
        </div>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-md-5 text-center mb-3">
                <h4>Accèder à votre espace membre</h4>
                <form action="{{ path('login') }}" method="post">
                    <label for="username">Email</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{last_username }}" placeholder="Saisissez votre adresse email" />
                    <small class="form-text text-muted mb-2">Nous ne partagerons jamais votre email avec quelqu'un d'autre.</small>
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Saisissez votre mot de passe"/>
                    <small class="form-text text-muted"><a href="{{ path('forgot_password') }}">Mot de passe oublié
                            ?</a></small>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark mt-2">Se connecter</button>
                    </div>
                </form>
            </div>
            <div class="col-md-5 offset-md-1 text-center mt-5">
                <h4>Pas encore inscrit?</h4>
                <p>Post haec indumentum regale quaerebatur et ministris fucandae purpurae tortis confessisque pectoralem tuniculam</p>
                <a class="btn btn-dark mt-2" href="#">Demander vos accès</a></p>
            </div>
        </div>
    </div>
{% endblock %}
