{% extends 'base.html.twig' %}

{% block body %}
<div class="container pt-5 pb-5" align="center">
    <div class="card">
        <h1 class="card-header bg-green">Connexion</h1>
        <div class="card-body pt-5 pb-5">

        <div class="row">
            <div class="col-md-5 card bg-gold mr-5 ml-5">
                <h2 class="card-header bg-green gold mt-2">Accèder à votre espace</h2>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form class="card-body action="{{ path('login') }}" method="post">
                    <label for="username">Email</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{last_username }}" placeholder="Saisissez votre adresse email" />
                    <small class="form-text text-muted mb-4">Nous ne partagerons jamais votre email avec quelqu'un d'autre.</small>
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Saisissez votre mot de passe"/>
                    <small class="form-text text-muted mb-4"><a href="{{ path('forgot_password') }}">Mot de passe oublié ?</a></small>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark bg-green">Se connecter</button>
                    </div>
                </form>
            </div>
            <div class="col-md-5 card bg-gold ml-5">
                <h2 class="card-header bg-green gold mt-2 mb-5">Pas encore inscrit ?</h2>
                <p class="mt-4">Post haec indumentum regale quaerebatur et ministris fucandae purpurae tortis confessisque pectoralem tuniculam</p>
                <div class="text-center">
                    <a class="btn btn-dark mt-4 bg-green" href="#">Demander vos accès</a>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
