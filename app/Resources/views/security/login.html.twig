{% extends 'base.html.twig' %}

{% block body %}

    <div class="container contain-home p-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <h1>Connexion</h1>
            </div>
        </div>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <p>Post haec indumentum regale quaerebatur et ministris fucandae purpurae tortis confessisque pectoralem tuniculam</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="{{ path('login') }}" method="post">
                    <label for="username">Email</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{last_username }}" placeholder="Saisissez votre adresse email" />
                    <small class="form-text text-muted mb-2">Nous ne partagerons jamais votre email avec quelqu'un d'autre.</small>
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Saisissez votre mot de passe"/>
                    <small class="form-text text-muted"><a href="{{ path('forgotPassword') }}">Mot de passe oubli√© ?</a></small>
                    <div class="text-center">
                        <button type="submit" class="btn btn-light">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container contain-home mt-5 p-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <h1>Pas encore inscrit?</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <p>Post haec indumentum regale quaerebatur et ministris fucandae purpurae tortis confessisque pectoralem tuniculam</p>
            </div>
        </div>
            <div class="col-md-8 offset-md-2 text-center">
                <a type="button" class="btn btn-light" href="{{ path('registration') }}"> S'inscire</a>
            </div>
        </div>
    </div>
{% endblock %}
