{% extends 'baseAdmin.html.twig' %}

{% block titleDashboard %}
    Inscrire un nouveau membre
{% endblock %}

{% block body %}
    <div class="container pt-5 pb-5" align="center">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="card">
                    {{ form_start(form) }}
                    <div class="card-body ">
                        <p class="card-text">{{ form_label(form.firstName) }}</p>
                        <p class="card-text">{{ form_widget(form.firstName) }}</p>
                        <p class="card-text">{{ form_label(form.lastName) }}</p>
                        <p class="card-text">{{ form_widget(form.lastName) }}</p>
                        <p class="card-text">{{ form_label(form.email) }}</p>
                        <p class="card-text">{{ form_widget(form.email) }}</p>
                        <div class="mt-5">
                            <input class="btn btn-primary bg-green" type="submit" value="Ajouter">
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
