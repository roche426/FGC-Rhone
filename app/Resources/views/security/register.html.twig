{% extends 'base.html.twig' %}

{% block body %}

    <div class="container contain-home p-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center mb-3">
                <h1>Inscription</h1>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-8 offset-md-2">
                {{ form_start(form) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}

                <button class="btn btn-light" type="submit">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

