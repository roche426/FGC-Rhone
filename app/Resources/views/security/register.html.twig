{% extends 'baseAdmin.html.twig' %}

{% block titleDashboard %}
    <div class="container text-center" style="border: solid">
        <div class="row">
            <div class="">
                <h1>Inscrire un nouveau membre</h1>
            </div>
        </div>
        {% endblock %}
        {% block body %}
        <div class="row text-center center-block" style="border: solid">
            <div class="col-md-4 offset-md-4">
                {{ form_start(form) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}

                <button class="btn btn-light" type="submit">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

